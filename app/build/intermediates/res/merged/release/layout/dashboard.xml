<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="6dip" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/addm"
                style="@style/HomeButton"
                android:drawableTop="@drawable/register"

                android:text="ADD MEMBER" />

            <Button
                android:id="@+id/arecord"
                style="@style/HomeButton"
                android:drawableTop="@drawable/postassignment"

                android:text="ADD RECORD" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal" >
            <Button
                android:id="@+id/most"
                style="@style/HomeButton"
                android:drawableTop="@drawable/postassignment"
                android:text="MOST WANTED CRIMINAL" />


            <Button
                android:id="@+id/complaint"
                style="@style/HomeButton"
                android:drawableTop="@drawable/complaint"
                android:text="COMPLAINT" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/askque"
                style="@style/HomeButton"
                android:drawableTop="@drawable/askquestion"

                android:text="ASKQUESTION" />


            <Button
                android:id="@+id/sugges"
                style="@style/HomeButton"
                android:drawableTop="@drawable/sugges"
                android:text="SUGGESION" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/fileshare"
                style="@style/HomeButton"
                android:drawableTop="@drawable/sharefile"

                android:text="VIEW NEWS" />

        </LinearLayout>
        </LinearLayout>

</LinearLayout>