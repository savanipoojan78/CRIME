<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="false"
    >

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="MOST WANTED CRIMINAL"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textAlignment="center"/>

        <!-- <android.support.design.widget.TextInputLayout
             android:id="@+id/Tname"
             android:layout_width="match_parent"
             android:layout_height="wrap_content">-->
        <EditText
            android:id="@+id/add_cnumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:ems="10"
            android:hint="Criminal No."
            android:inputType="textEmailAddress"
            android:padding="10dp"
            android:textStyle="bold" />


        <!-- <android.support.design.widget.TextInputLayout
             android:id="@+id/Tfname"
             android:layout_width="match_parent"
             android:layout_height="wrap_content">-->
        <EditText
            android:id="@+id/add_criminal_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:ems="10"
            android:hint="Criminal Name"
            android:inputType="textEmailAddress"
            android:padding="10dp"
            android:textStyle="bold"></EditText>

        <!-- <android.support.design.widget.TextInputLayout
             android:id="@+id/Tmname"
             android:layout_width="match_parent"
             android:layout_height="wrap_content">-->
        <EditText
            android:id="@+id/add_nickname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:ems="10"
            android:hint="Nick Name"
            android:inputType="textEmailAddress"
            android:padding="10dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/add_age"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:ems="10"
            android:hint="Age"
            android:inputType="textEmailAddress"
            android:padding="10dp"
            android:textStyle="bold" />



        <!-- <android.support.design.widget.TextInputLayout
             android:id="@+id/Tvillage"
             android:layout_width="match_parent"
             android:layout_height="wrap_content">-->


        <EditText
            android:id="@+id/add_crime_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textEmailAddress"
            android:textStyle="bold"
            android:hint="Crime Type"
            android:padding="10dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <!--<android.support.design.widget.TextInputLayout
            android:id="@+id/Ttaluka"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">-->




        <!--<adroid.support.design.widget.TextInputLayout
            android:id="@+id/Tdist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">-->

        <EditText
            android:id="@+id/add_how_many"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:ems="10"
            android:hint="How many crime?"
            android:inputType="textEmailAddress"
            android:padding="7dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/add_decsription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:ems="10"
            android:hint="Decsription"
            android:inputType="textEmailAddress"
            android:padding="5dp"
            android:textStyle="bold" />


        <!-- <android.support.design.widget.TextInputLayout
             android:id="@+id/Tperadd"
             android:layout_width="match_parent"
             android:layout_height="wrap_content">-->

        <Button
            android:id="@+id/add"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp"
            android:background="@color/colorAccent"
            android:text="ADD" />


    </LinearLayout>


</ScrollView>